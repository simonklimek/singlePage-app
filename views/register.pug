extends layout
block content
    div.row
        div.col.m6.s12
            h1 REGISTER
            form.col.s12(method="POST", action="reg")
                div.row
                div.input-field.col.s12
                    input.validate(type="text", name="usernamelog", placeholder="Username", required)
                    //- label(for="first_name") Login
                div.input-field.col.s12
                    input.validate(type="password", name="passwordlog", placeholder="Password", required)
                    //- label(for="password") Password
                //- div.input-field.col.s12
                    //- input.validate(id="email2", type="email")
                    //- label(for="email2") Confirm Password 
                button.btn.waves-effect.orange.waves-light(type="submit", name="action") Register
                    i.material-icons.right check
        div.col.m6.s12
            h1 LOGIN
            div.row
            form.col.s12(method="POST", action="auth")
                div.row
                    div.input-field.col.s12
                        i.material-icons.prefix account_circle
                        input.validate(type="text", name="username", placeholder="Username", required)
                        //- label(for="icon_prefix") Username
                    div.input-field.col.s12
                        i.material-icons.prefix lock
                        input.validate(type="password", name="password", placeholder="Password", required)
                        //- label(for="icon_lock") Password
                button.btn.waves-effect.orange.waves-light(type="submit", name="action") Login 
                    i.material-icons.right how_to_reg